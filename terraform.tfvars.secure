# Secure Configuration Template
# Copy this to terraform.tfvars and customize for your environment
# This template includes security hardening configurations

# Basic Configuration
environment       = "dev"  # Change to "prod" for production
location         = "East US 2"
organization_name = "your-org"  # CHANGE THIS
project_name     = "ai-landing-zone"

# CRITICAL SECURITY: Network Configuration
# DO NOT use 0.0.0.0/0 in production!
hub_vnet_address_space         = ["10.0.0.0/16"]
ai_apps_vnet_address_space     = ["10.1.0.0/16"]
ai_hub_vnet_address_space      = ["10.2.0.0/16"]
ai_services_vnet_address_space = ["10.3.0.0/16"]

# CRITICAL SECURITY: Access Control
# Replace these with your actual IP ranges
allowed_source_ips = [
  "203.0.113.0/24",    # Example: Office network
  "198.51.100.0/24"    # Example: VPN network
]

admin_source_ips = [
  "203.0.113.100/32"   # Example: Admin workstation
]

# Security Configuration - ENABLE FOR PRODUCTION
enable_ddos_protection = true  # Set to true for production

# AI Services Configuration
ai_services = {
  openai = {
    kind = "OpenAI"
    sku  = "S0"
  }
  cognitive_services = {
    kind = "CognitiveServices"
    sku  = "S0"
  }
}

# Monitoring Configuration - INCREASE FOR PRODUCTION
log_retention_days = 90  # Minimum 90 days for production

# Resource Tagging - CUSTOMIZE FOR YOUR ORG
tags = {
  Environment     = "dev"
  Project         = "ai-landing-zone"
  CostCenter      = "IT"
  Owner           = "Platform Team"
  CreatedBy       = "Terraform"
  SecurityLevel   = "High"
  DataClass       = "Internal"
  BackupRequired  = "true"
  ComplianceScope = "SOC2"
}

